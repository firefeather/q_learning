set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically
set ztic auto

set key left below


set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set terminal png size 1024,768 enhanced font "Helvetica,20"



set key
set label

set xlabel "experiment id"
set style fill solid border rgb "black"

set ylabel "average error"

set output 'summary_result_all_average_error_log.png'
plot "mcculloch_pitts_neuron_1_layer/summary_result_log.txt" using 1 title "mcculloch pitts neuron 1 hidden layer"  with histogram lw 2.0, \
    "mcculloch_pitts_neuron_2_layers/summary_result_log.txt" using 1 title "mcculloch pitts neuron 2 hidden layers"  with histogram lw 2.0, \
    "testing_neuron_1_layer/summary_result_log.txt" using 1 title "testing neuron 1 hidden layer"  with histogram lw 2.0, \
    "mcculloch_pitts_neuron_kohonen_1_layer/summary_result_log.txt" using 1 title "hybrid network mcculloch pitts neuron 1 hidden layer"  with histogram lw 2.0, \
    "testing_neuron_kohonen_1_layer/summary_result_log.txt" using 1 title "hybrid network testing neuron 1 hidden layer"  with histogram lw 2.0

set ylabel "maixmum error"

set output 'summary_result_all_maximum_error_log.png'
plot "mcculloch_pitts_neuron_1_layer/summary_result_log.txt" using 2 title "mcculloch pitts neuron 1 hidden layer"  with histogram lw 2.0, \
        "mcculloch_pitts_neuron_2_layers/summary_result_log.txt" using 2 title "mcculloch pitts neuron 2 hidden layers"  with histogram lw 2.0, \
        "testing_neuron_1_layer/summary_result_log.txt" using 2 title "testing neuron 1 hidden layer"  with histogram lw 2.0, \
        "mcculloch_pitts_neuron_kohonen_1_layer/summary_result_log.txt" using 1 title "hybrid network mcculloch pitts neuron 1 hidden layer"  with histogram lw 2.0, \
        "testing_neuron_kohonen_1_layer/summary_result_log.txt" using 1 title "hybrid network testing neuron 1 hidden layer"  with histogram lw 2.0

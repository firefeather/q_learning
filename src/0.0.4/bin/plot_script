set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically



set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set terminal png size 1024,768 enhanced font "Helvetica,20"


set label

set xlabel "s[0]"
set ylabel "s[1]"
set zlabel "Q max"

set view 60,110

set xtic auto
set ytic auto
set ztic auto

set lmargin 5
set key below


set hidden3d

set dgrid3d 64,64
set surface

set autoscale

set zlabel "Q max"
set output 'q_max.png'
splot 'q_max.txt' using 1:2:3 title "q max value" with pm3d


set pm3d map
set palette rgbformulae 22,13,-31

set zlabel "Q max"
set output 'q_max_grad.png'
splot 'q_max.txt' using 1:2:3 title "q max value"
